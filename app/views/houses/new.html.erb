<!-- Page content-->
<section class="py-5">
  <div class="container px-5">
    <!-- Contact form-->
    <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
      <div class="text-center mb-5">
          <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-envelope"></i></div>
          <h1 class="fw-bolder">Create a House</h1>
          <p class="lead fw-normal text-muted mb-0">Enter the name of your new house</p>
      </div>
      <div class="row gx-5 justify-content-center">
          <div class="col-lg-8 col-xl-6">
              <%= form_with(model: @house, local: true) do |f| %>
                <%= render 'shared/house_error_messages' %>

                <%= f.label :name %>
                <%= f.text_field :name, class: 'form-control' %>

                <%= f.submit "Create my house", class: "btn btn-primary" %>
              <% end %>
          </div>
      </div>
    </div>
  </div>
</section>