<% provide(:title, 'Sign up') %>
<h1>New task</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @task, local: true) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.label :priority %>
      <%= f.number_field :priority, in: 1.0..3.0, class: 'form-control' %>

      <%= f.label :due_date %>
      <%= f.date_select :due_date %>

      <%= f.label :users %>
      <p> Hold the shift key to select multiple users </p>
      <%= f.select(:users, @users.collect {|u| [ u.name, u.id ] }, {}, { :multiple => true, :size => 5 }) %>
      <%# f.select(:users, @users, { :prompt => "Select who is responsible for this task"}, { :multiple => true }) %>

      <%= f.submit "Create task", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>