<h1>APPLIANCE</h1>
<br>
<div class="container">
  <div class="row text-center">
    <% @appliances.each do |appliance| %>
      <div class="col-sm-4">
        <div class="card" style="width: 25rem;">
          <%= image_tag ("/assets/" + appliance.name.gsub(/[[:space:]]/, '').downcase + ".png"), height: '350', width: '350'%>
          <div class="card-body">
            <h5 class="card-title"><%= appliance.name %></h5>
            <% if appliance.used == false %>
              <%= button_to "Use", appliance_path(appliance.id), :class => "btn btn-primary", :method => :patch %>
            <% elsif current_user.id == appliance.user_id %>
              <%= button_to "Unlock", appliance_path(appliance.id), :class => "btn btn-primary", :method => :patch %>
            <% else %>
              <button type="button" class="btn btn-primary" disabled><%= User.find_by(id: appliance.user_id).name %> is using</button>
            <% end %>
          </div>
        </div>
      </div>
    <% end %> 
  </div>
</div>