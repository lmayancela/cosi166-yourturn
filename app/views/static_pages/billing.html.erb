<% if logged_in? %>

  <h1>BILL</h1>

  <div class="jumbotron">

      <h3> Your current balance is <strong> <%= @balance %> $</strong></h3>
      <%= link_to "Click here to view balance details", billing_detail_path, class: 'btn btn-primary btn-lg' %>
      <%= link_to "Pay my bill", "#", class: 'btn btn-primary btn-lg' %>

    </div>
  </div>

  <div class="center">
    <%= link_to "Uplaod a new bill", new_bill_path, class: 'btn btn-primary btn-lg' %>
  </div>

  <div class="jumbotron">

      <h3> balance history</h3>
      <%= pie_chart @usersplits %>

    </div>
  </div>
  
<% else %>
  <div class="center main-jumbo">
    <div class="jumbotron">
      <h1>Welcome To YourTurn!</h1>
      <h3> YourTurn allows you to seamlessly manage a multitude of house tasks and responsibilities amongst your housemates! </h3>
      <p> It appears that you aren't logged in. Use the button below to sign up or click the log in button at the top of the page. </p>
      <%= link_to "Sign Up", signup_path , class: 'btn btn-primary btn-lg' %>      
    </div>
  </div>
<% end %>